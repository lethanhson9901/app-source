#######################################
# Application Configuration
#######################################
# Core application settings
APP_NAME="Python Application"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # Options: development, staging, production
DEBUG=true  # Enable debug mode for development

# API Configuration
API_KEY="dev-secret-key"  # Change this in production!
APP_PORT=8080  # Application port number

# Logging Configuration
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

#######################################
# Docker Configuration
#######################################
DOCKER_REGISTRY=local  # Registry for Docker images
IMAGE_TAG=latest      # Docker image tag
BUILD_VERSION=latest  # Build version for the application

#######################################
# Database Configuration
#######################################
# PostgreSQL settings
POSTGRES_USER=user
POSTGRES_PASSWORD=password  # Change this in production!
POSTGRES_DB=db

#######################################
# Redis Configuration
#######################################
REDIS_PASSWORD=redis  # Change this in production!

#######################################
# Security & CORS Configuration
#######################################
# Allowed origins for CORS
# Format: JSON array of allowed origins
ALLOWED_ORIGINS='["http://localhost:3000","http://localhost:8080"]'

#######################################
# Monitoring Configuration
#######################################
# Metrics and monitoring settings
ENABLE_METRICS=true

# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin  # Change this in production!

#######################################
# Resource Limits Configuration
#######################################
# CPU and memory limits for containers
APP_CPU_LIMIT=1
APP_MEMORY_LIMIT=512M
APP_CPU_RESERVATION=0.25
APP_MEMORY_RESERVATION=256M

#######################################
# Environment-Specific Overrides
#######################################
# Add environment-specific variables here
# Example: STAGING_DB_HOST, PROD_API_KEY, etc.

#######################################
# Security Notice
#######################################
# IMPORTANT: Never commit this file to version control!
# This is a template - create a copy named .env for local use
# Make sure to change all passwords and sensitive values in production